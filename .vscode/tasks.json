{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build CMake Project",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "${workspaceFolder}/build",
          "--config",
          "Debug",
          "--target",
          "all",
          "-j6"
        ],
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": ["absolute"],
          "pattern": [
            {
              "regexp": "^(.*?):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Build project using CMake with GCC/Clang-style error reporting"
      }
    ]
  }
  